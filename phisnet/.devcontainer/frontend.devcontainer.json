{
  "name": "PhishNet Frontend Development",
  "build": {
    "dockerfile": "frontend.Dockerfile"
  },
  "forwardPorts": [
    3000,
    3001
  ],
  "postCreateCommand": "npm run setup:frontend",
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          "**/server/**": true,
          "**/migrations/**": true,
          "**/.env*": true,
          "**/node_modules/**": true
        },
        "search.exclude": {
          "**/server/**": true,
          "**/migrations/**": true
        },
        "files.watcherExclude": {
          "**/server/**": true,
          "**/migrations/**": true
        }
      },
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense"
      ]
    }
  },
  "mounts": [
    "source=phishnet-frontend-node-modules,target=/workspace/node_modules,type=volume"
  ],
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "WORKSPACE_TYPE": "frontend",
    "ALLOWED_PATHS": "client/,shared/types/,docs/"
  }
}
